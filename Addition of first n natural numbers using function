//Addition of first n natural numbers using function
#include <iostream>
using namespace std;
int add(int n)
{
    int count = 0;
    for(int i = 1 ; i<=n ; i++)
    {
        count = count + i;
    }
    return count;
}
int main() {
    int n;
    cout << "Enter the a natural number n : ";
    cin >> n;
    cout << "The addition of first " << n << " natural numbers is " << add(n) << endl;
    return 0;
}

/*
Enter the a natural number n : 5
The addition of first 5 natural numbers is 15
